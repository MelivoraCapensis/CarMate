@{
    ViewBag.Title = Resources.Home.Title;
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="content-type" content="text/html; charset=utf-8">
    <title>@ViewBag.Title</title>

    <meta name="keywords" content="АЗС, топливо, бензин, заправиться, события, бортовой журнал">
    <meta name="description" content="">
    <meta name="viewport" content="user-scalable=1, width=1020px, initial-scale=1">
    @Styles.Render("~/Content/landing")
    <script src="~/js/landing/jquery-1.9.1.min.js" type="text/javascript"></script>
    <script src="~/js/landing/jquery.placeholder.min.js" type="text/javascript"></script>
    <script src="~/js/landing/jquery.maskedinput.min.js" type="text/javascript"></script>
    <script src="~/js/landing/jquery.form.min.js" type="text/javascript"></script>
    <script src="~/js/landing/bjqs-1.3.js" type="text/javascript"></script>
    <script src="~/js/landing/script.js?v2" type="text/javascript"></script>
    @*@Scripts.Render("~/Script/landing")*@
</head>
<body>
    <div class="header">
        <div class="head-top-row">
            <div class="conteiner clr">
                <div id="ib-block1" class="logo"><img alt="" src="~/Images/logo.png" width="225"><span>  </span></div>
                <div class="b-request">
                    <address class="head-phone">
                        <a class="menu_items" href="@Url.Action("Index", "User")"><img src="~/Images/p1.png" alt=""/></a>
                        <a class="menu_items" href="@Url.Action("GetMap", "Map")"><img src="~/Images/p2.png" alt="" /></a>
                        <a class="menu_items" href="@Url.Action("Index", "Car")"><img src="~/Images/p3.png" alt="" /></a>
                    </address>
                    <a href="@Url.Action("Register", "Account")" class="bl-link call-request-btn">@Resources.Global.SignUp</a>
                    <a href="@Url.Action("Login", "Account")" class="enter"><span class="bl-link">@Resources.Global.SignIn<i class="icon-auth"></i></span></a>
                </div><!--end b-request-->
            </div><!--end conteiner-->
        </div><!--end head-top-row-->
        <div class="head-down-row pattern-bg">
            <div class="conteiner clr">
                <div class="head-tile-col">
                    <div class="title-block" id="ib-block2">
                        <h1>@Resources.Home.MonitoringFuelPrices</h1>
                        <p class="post-title">@Resources.Home.Description</p>
                    </div>
                    <div id="slider" style="width: 610px; height: 220px; position: relative;">
                        <ul class="bjqs" style="height: 220px; width: 610px; display: block;">
                            <li class="bjqs-slide" style="height: 220px; width: 610px; display: list-item;">
                                <img src="~/Images/slider/img1.png">
                            </li>
                            <li class="bjqs-slide" style="height: 220px; width: 610px; display: none;">
                                <img src="~/Images/slider/img3.png">
                            </li>
                        </ul>
                        <ul class="bjqs-controls v-centered">
                            <li class="bjqs-prev">
                                <a href="#" data-direction="previous" style="top: 36.8181818181818%;"></a>
                            </li>
                            <li class="bjqs-next">
                                <a href="#" data-direction="forward" style="top: 36.8181818181818%;"></a>
                            </li>
                        </ul>
                        <ul class="bjqs-markers h-centered" style="left: 282.5px;">
                            <li class="active-marker"><a href="#"></a></li>
                            <li class=""><a href="#"></a></li>
                        </ul>
                    </div>
                </div>
                <div class="head-form-col">
                    <div id="ib-block3"><h3 class="form-title">@Resources.Home.WhyIsThis</h3></div>
                    <div id="ib-block4">@Resources.Home.WhyIsThisAnswer</div>
                </div>
            </div><!--end head-down-row-->
        </div><!--end conteiner-->
    </div><!--end header-->

    <div class="stat-block">
        <div class="conteiner">
            <div class="stat-info clr">
                <div class="wrap-num" id="ib-block5"><span class="num">114</span> <span class="num-title">@Resources.Home.BrandsAzs</span></div>
                <div class="wrap-num" id="ib-block6">
                    <span class="num">900</span>
                    <span class="num-title">@Resources.Home.MarkAuto</span>
                </div>
            </div>
        </div><!--conteiner-->
    </div><!--end stat-block-->
    <div class="how-work-service">
        <div class="conteiner" id="ib-block7">
            <h2>@Resources.Home.HowWork</h2>
            <ul class="service-list clr">
                <li>
                    <div class="service-img"><img alt="" height="110" src="~/Images/service/1.gif" width="110"></div>
                    @Resources.Home.Registration
                </li>
                <li>
                    <div class="service-img"><img alt="" height="110" src="~/Images/service/2.gif" width="110"></div>
                    @Resources.Home.FillingData
                </li>
                <li>
                    <div class="service-img"><img alt="" height="110" src="~/Images/service/3.gif" width="110"></div>
                    @Resources.Home.RetrievingData
                </li>
                <li>
                    <div class="service-img"><img alt="" height="110" src="~/Images/service/4.gif" width="110"></div>
                    @Resources.Home.DisseminationData
                </li>
                <li>
                    <div class="service-img"><img alt="" height="110" src="~/Images/service/5.gif" width="110"></div>
                    @Resources.Home.Saving
                </li>
            </ul>
        </div><!--end service-->
    </div><!--end how-work-service-->
    <div class="our-advantages pattern-bg">
        <div class="conteiner" id="ib-block8">
            <h2>@Resources.Home.AdvantagesService</h2>
            <ul class="advantages-list clr">
                <li><img src="~/Images/advantages/1.png" alt="" width="69" height="69"><span>@Resources.Home.PersonalProfile</span></li>
                <li class="right-col"><img src="~/Images/advantages/5.png" alt="" width="69" height="69"><span>@Resources.Home.CommentsAndRatings</span></li>
                <li><img src="~/Images/advantages/2.png" alt="" width="69" height="69"><span>@Resources.Home.StoredEvents</span></li>
                <li class="right-col"><img src="~/Images/advantages/6.png" alt="" width="69" height="69"><span>@Resources.Home.DataFromOtherUsers</span></li>
                <li><img src="~/Images/advantages/3.png" alt="" width="69" height="69"><span>@Resources.Home.ShowLocation</span></li>
                <li class="right-col"><img src="~/Images/advantages/7.png" alt="" width="69" height="69"><span>@Resources.Home.DisplayOnMap</span></li>
                <li><img src="~/Images/advantages/4.png" alt="" width="69" height="69"><span>@Resources.Home.ShowPrice</span></li>
                <li class="right-col"><img src="~/Images/advantages/8.png" alt="" width="69" height="69"><span>@Resources.Home.HelpsSaving</span></li>
            </ul>
        </div><!--end conteiner-->
    </div><!--end our-advantages-->
    <div class="slider-bg">
        <div class="container">
        </div>
    </div>
    <div class="problem-block">
        <div class="conteiner clr" id="ib-block9">
            <h2>@Resources.Home.WhatProblemsWeSolve</h2>
            <ul class="problem-list">
                <li>@Resources.Home.WhereRefuelCheaperAndFuelFit</li>
                <li>@Resources.Home.WhereDesiredNetworkGasStations</li>
                <li>@Resources.Home.HowMoneySpent</li>
                <li>@Resources.Home.WhenNeedMaintenance</li>
                <li>@Resources.Home.ComparisonCars</li>
            </ul><ul class="problem-list plus-list">
                <li>@Resources.Home.DisplayFuelPrices</li>
                <li>@Resources.Home.GettingPoiPoints</li>
                <li>@Resources.Home.RememberEvents</li>
                <li>@Resources.Home.PlanningService</li>
                <li>@Resources.Home.ProvidingInformationAboutOtherCars</li>
            </ul>
        </div><!--end-conteiner-->
    </div><!--end problem-block-->

    <div class="footer">
        <div>
            <div class="inner clearfix">
                <span class="left"></span>
                <span class="right"></span>
            </div>
        </div>
    </div>
</body>
</html>
