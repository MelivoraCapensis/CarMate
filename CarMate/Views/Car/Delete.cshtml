@model CarMate.Cars

@{
    ViewBag.Title = "Удаление транспортного средства";
}

<div class="container">
    <h2>@ViewBag.Title</h2>
    <h3>Вы уверены, что хотите удалить "@Model.CarModels.CarBrands.brand - @Model.CarModels.model - @Model.CarModifications.modification?"</h3>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <p>
            <input type="submit" value="Удалить" class="btn btn-primary"/>
            @Html.ActionLink("Назад", "Details", "User", new {id = @Model.UserId}, new {@class = "btn btn-primary"})
        </p>
    }
</div>
<!-- /class container -->
