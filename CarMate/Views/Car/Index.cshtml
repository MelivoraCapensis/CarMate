@model IEnumerable<CarMate.Cars>

@{
    ViewBag.Title = "Все транспортные средства";
}

<div class="container">
  
        <h2>@ViewBag.Title</h2>

        @foreach (var car in @Model)
        {
            var border = "thumbnail";
            if (ViewBag.Owner != null && ViewBag.Owner == @car.UserId)
            {
                border = "thumbnail alert alert-success";
            }

            <div class="row">
                <ul class="media-list col-lg-6 col-md-6">
                    <li class="media">
                        <div class="@border">
                            <div class="@border media-left media-middle">
                                <img alt="Avatar" src="@car.ImgPath" style="width: 150px; height: 150px" />
                            </div>
                            @*</div>*@
                            <div class="media-body">
                                <h5 class="media-heading">Владелец: @Html.ActionLink(@car.Users.Nickname, "Details", "User", new { id = car.UserId }, null)</h5>
                                <p>Марка: @car.CarModels.CarBrands.brand</p>
                                <p>Модель: @car.CarModels.model</p>
                                <p>
                                    Модификация:
                                    @if (@car.ModificationId != null)
                                    {
                                        @car.CarModifications.modification
                                    }
                                </p>
                                @Html.ActionLink("Подробно", "Details", "Car", new { id = car.Id }, null)
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        }


</div>
