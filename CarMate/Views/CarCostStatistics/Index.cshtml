        //    arr[dataKey[i]] = dataValue[i];
        //    alert(arr[dataKey[i]]);
        //}
        //alert(arr["Заправка"]);

        jQuery.getJSON("CarCostStatistics/GetCostStatistics", { "carId": carId }, function (items) {


