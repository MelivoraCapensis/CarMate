@model CarMate.CarEvents

@{
    ViewBag.Title = "Удаление события";
}

<div class="container">
    <h2>Владелец: "@ViewBag.User.Nickname"</h2>
    <div class="row">
        @Html.Partial("_PartCarInfo", (CarMate.Cars)ViewBag.Car)
        <div class="col-lg-9 col-md-9">
            @Html.Partial("_PartCarMenu")
            <hr />
            <div id="carContainer">
                <h2>@ViewBag.Title</h2>
                <h3>Вы точно хотите удалить событие "@Model.EventTypes.Name"?</h3>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <p>
                        <input class="btn btn-default" type="submit" value="Удалить" />
                        @Html.ActionLink("Назад", "Index", "CarEvents", new { carId = Model.CarId }, htmlAttributes: new {@class = "btn btn-default"})
                    </p>
                }
            </div>
        </div>
    </div>
</div><!-- /class container -->