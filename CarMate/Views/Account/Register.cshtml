                @Html.TextBoxFor(model => model.Email, htmlAttributes: new {@class = "form-control"})
                @Html.ValidationMessageFor(model => model.Email, "", new {@class = "text-danger"})
            </div>
        </div>

        @*<hr/>

        <div class="form-group">
