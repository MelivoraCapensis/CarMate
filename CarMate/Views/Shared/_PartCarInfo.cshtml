@model CarMate.Cars

<div class="col-lg-3 col-md-3 thumbnail">
    <div class="text-center">
        <img src="@Model.ImgPath" class="col-lg-12" />
        @*<img src="" class="col-lg-12" />*@
        @if (ViewBag.IsOwner != null && ViewBag.IsOwner == true)
        {
            @Html.ActionLink("Редактировать автомобиль", "Edit", "Car", new { id = Model.Id }, new { @class = "btn btn-primary" })
        }
        @Html.ActionLink("Посмотреть все фото", "Photo", "Car", new { id = Model.Id }, new { @class = "btn btn-default", disabled = true })
    </div>
    <hr />
    <p>Марка: @Model.CarModels.CarBrands.brand</p>
    <p>Модель: @Model.CarModels.model</p>
    <p>Модификация: @Model.CarModifications.modification</p>
    <p>Год выпуска: @*@Model.Car.dateBuy</p>*@
    <p>Расход бензина: @Model.Consumption л/100км</p>
    <p>Одометр (пробег): @Model.Odometer км</p>
    <p>Объем бака: @Model.Tank л</p>
    <p>Топливо: @*@Model.Car.dateBuy</p>*@
    <p>Цвет: @*@Model.Car.dateBuy</p>*@
    <p>Дата покупки: @*@Model.Car.dateBuy</p>*@
    <p>Коробка: @*@Model.Car.dateBuy</p>*@
    <p>Комментарий/отзыв: @*@Model.Car.dateBuy</p>*@
    <p>Оценка пользователя: @*@Model.Car.dateBuy</p>*@
</div>