                <div class="wrap-num" id="ib-block5" contenteditable="true"><span class="num">114</span> <span class="num-title">брендов АЗС</span></div>
                <div class="wrap-num" id="ib-block6" contenteditable="true">
                    <span class="num">900</span>
                    <span class="num-title">марок автомобилей</span>
                </div>
            </div>
        </div><!--conteiner-->
    </div><!--end stat-block-->
