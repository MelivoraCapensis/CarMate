                        <ul class="bjqs" style="height: 220px; width: 610px; display: block;">
                            <li class="bjqs-slide" style="height: 220px; width: 610px; display: list-item;">
                                <img src="images/slider/img1.png">
                            </li>
                            <li class="bjqs-slide" style="height: 220px; width: 610px; display: none;">
                                <img src="images/slider/img3.png">
                            </li>
