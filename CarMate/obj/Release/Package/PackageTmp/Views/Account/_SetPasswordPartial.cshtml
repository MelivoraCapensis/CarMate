@model CarMate.Models.LocalPasswordModel

<p>
    У вас нет локального пароля для этого сайта. Добавьте локальный пароль,
    чтобы входить без внешней учетной записи.
</p>

@using (Html.BeginForm("Manage", "Account"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()


    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.NewPassword, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-lg-3 col-md-3">
                @Html.PasswordFor(model => model.NewPassword, htmlAttributes: new {@class = "form-control"})
                @Html.ValidationMessageFor(model => model.NewPassword, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-lg-3 col-md-3">
                @Html.PasswordFor(model => model.ConfirmPassword, htmlAttributes: new {@class = "form-control"})
                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Задать пароль" class="btn btn-primary"/>
            </div>
        </div>
    </div>





}
