@model CarMate.CarEvents

@{
    ViewBag.Title = "Подробно";
}

<div class="container">
    <h2>Владелец: "@ViewBag.User.Nickname"</h2>
    <div class="row">
        @Html.Partial("_PartCarInfo", (CarMate.Cars)ViewBag.Car)
        <div class="col-lg-9 col-md-9">
            @Html.Partial("_PartCarMenu")
            <hr />
            <div id="carContainer">
                <h2>@ViewBag.Title</h2>
                                
                <div class="form-horizontal">
                    <div class="form-group col-md-12">
                        @Html.LabelFor(events => events.EventTypes.Name, "Событие", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-2">
                            @Html.DisplayFor(model => model.EventTypes.Name)
                        </div>
                    </div>

                    <div class="form-group col-md-12">
                        @Html.LabelFor(events => events.Odometer, "Пробег", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-2">
                            @Html.DisplayFor(model => model.Odometer)
                        </div>
                    </div>

                    <div class="form-group col-md-12">
                        @Html.LabelFor(events => events.DateEvent, "Дата", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-2">
                            @Html.DisplayFor(model => model.DateEvent)
                        </div>
                    </div>

                    <div class="form-group col-md-12">
                        @Html.LabelFor(events => events.CostTotal, "Общая стоимость", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-2">
                            @Html.DisplayFor(model => model.CostTotal)
                        </div>
                    </div>

                    <div class="form-group col-md-12">
                        @Html.LabelFor(events => events.Comment, "Комментарий", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-2">
                            @Html.DisplayFor(model => model.Comment)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            @Html.ActionLink("Назад", "Index", "CarEvents", new { carId = Model.CarId }, new { @class = "btn btn-default" })
                            @Html.ActionLink("Изменить", "Edit", new { id = Model.Id })
                            @Html.ActionLink("Удалить", "Delete", new { id = Model.Id })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>